<h1>Create a new budget</h1>

<%= form_with model: @budget, url: budgets_path do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :amount %><br>
    <%= form.number_field :amount, in: 1.0..99999999.0 %>
  </div>
  <div>
    <%= form.label :category %><br>
    <%= form.select :group_id, (@categories.map{|category| [category.name, category.id]}) %>
  </div>
  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>