<div class="bg-main flex justify-center p-4">
<%= link_to '<', root_path, class: "justify-self-start text-white text-2xl" %>
<h2 class="text-white text-2xl my-0 mx-auto">REGISTER</h2>
<input type="submit" value="Next" form="new_user" class="text-white">
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {class: 'flex flex-col items-center mt-2' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field w-3/5 mb-2">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Full name', class: 'w-full' %>
  </div>

  <div class="field w-3/5 mb-2">
    <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'w-full' %>
  </div>

  <div class="field w-3/5 mb-2">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password (6 characters minimum)', class: 'w-full' %>
  </div>

  <div class="field w-3/5">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'w-full' %>
  </div>

<% end %>
